<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HymnTitle_style">
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffdada0a</item>
    </style>
    <style name="HymnTitleNumber_style">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffc7c7c7</item>
    </style>

    <style name="strofaLabel_Style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffefe300</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="strofaContentl_Style">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#ffefeac9</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="composedNumberBox_Style">
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">#fffffff9</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/composed_number_box_bg</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
</resources>