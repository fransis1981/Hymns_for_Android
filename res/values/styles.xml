<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HymnTitle_style">
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffdada0a</item>
    </style>
    <style name="HymnTitleNumber_style">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffc7c7c7</item>
    </style>

    <style name="strofaLabel_Style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffefe300</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="strofaContentl_Style">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#ffefeac9</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="composedNumberBox_Style">
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">#fffffff9</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/composed_number_box_bg</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="main_spinners_style">
        <item name="android:textColor">@color/main_spinners_fg</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableEnd">@android:drawable/arrow_down_float</item>
        <item name="android:background">@drawable/mainspinners_bg</item>
    </style>
    <style name="spinners_labels_style_direct">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="spinners_labels_style_inverse">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/main_spinners_bg</item>
    </style>
</resources>