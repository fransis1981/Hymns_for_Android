<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HymnsAppMainStyle" parent="android:style/Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_hymns_actionbar_theme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Hymns_actionbar_theme</item>
        <!-- <item name="android:actionModeBackground">@drawable/cab_background_top_hymns_actionbar_theme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_hymns_actionbar_theme</item> -->
    </style>

    <style name="HymnTitle_style">
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/HymnTitle_color</item>
    </style>
    <style name="HymnTitle_item_style" parent="HymnTitle_style">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="item_titoloInnario_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="HymnTitleNumber_style">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffc7c7c7</item>
    </style>

    <style name="strofaLabel_Style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/strofaLabel_color</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="strofaContentl_Style">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#ffefeac9</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="composedNumberBox_Style">
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">#fffffff9</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/composed_number_box_bg</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="main_spinners_style">
        <item name="android:textColor">@color/main_spinners_fg</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableEnd">@android:drawable/arrow_down_float</item>
        <item name="android:background">@drawable/mainspinners_bg</item>
    </style>
    <style name="spinners_labels_style_direct">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="spinners_labels_style_inverse">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/main_spinners_bg</item>
    </style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- ~~~~~~~~~~~~ SUPPORT STYLES ~~~~~~~~~~ -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="ActionBar.Transparent.Hymns_actionbar_theme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_hymns_actionbar_theme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Hymns_actionbar_theme</item>
    </style>

    <style name="ProgressBar.Hymns_actionbar_theme" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_hymns_actionbar_theme</item>
    </style>

    <style name="TabHymnsAppMainStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:background">@drawable/hymnsappmainstyle_tab_indicator_holo</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
    </style>

    <style name="TabTextHymnsAppMainStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <!-- v14 <item name="android:textAllCaps">true</item> -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>