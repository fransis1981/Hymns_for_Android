<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/hymntitle_bg"
                android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUM"
            android:id="@+id/item_Hymn_number"
            android:layout_centerVertical="true"
            android:gravity="center" android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="6dp"
            android:clickable="false"
            android:focusable="false"
            style="@style/HymnTitleNumber_style"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/item_hymn_title" style="@style/HymnTitle_item_style"
            android:layout_toRightOf="@+id/item_Hymn_number"
            android:layout_toLeftOf="@+id/item_Hymn_starcheck"
            android:layout_marginLeft="5dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/starcheck_selector"
            android:clickable="true"
            android:focusable="false"
            android:id="@+id/item_Hymn_starcheck" android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp" android:paddingLeft="2dp" android:paddingBottom="2dp"/>
</RelativeLayout>