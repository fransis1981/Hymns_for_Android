<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="fill_parent" android:alpha="0.5" android:background="#00000000">

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="150dp" android:layout_weight="0.5">
        <view android:layout_width="wrap_content"
              android:layout_height="150dp"
              class="com.fransis1981.Android_Hymns.DigitCircleButtonView" android:id="@+id/keypad_num1"
              android:layout_column="1" android:text="1" android:layout_weight="0.32"/>
        <view android:layout_width="wrap_content"
              android:layout_height="150dp"
              class="com.fransis1981.Android_Hymns.DigitCircleButtonView" android:id="@+id/keypad_num2"
              android:layout_column="2" android:text="2" android:layout_weight="0.32"/>
        <view android:layout_width="wrap_content"
              android:layout_height="150dp"
              class="com.fransis1981.Android_Hymns.DigitCircleButtonView" android:id="@+id/keypad_num3"
              android:layout_column="3" android:text="3" android:layout_weight="0.32"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="150dp" android:layout_weight="0.5">
        <view android:layout_width="wrap_content"
              android:layout_height="150dp"
              class="com.fransis1981.Android_Hymns.DigitCircleButtonView" android:id="@+id/keypad_num4"
              android:layout_column="1" android:text="4" android:layout_weight="0.32"/>
        <view android:layout_width="wrap_content"
              android:layout_height="150dp"
              class="com.fransis1981.Android_Hymns.DigitCircleButtonView" android:id="@+id/keypad_num5"
              android:layout_column="2" android:text="5" android:layout_weight="0.32"/>
        <view android:layout_width="wrap_content"
              android:layout_height="150dp"
              class="com.fransis1981.Android_Hymns.DigitCircleButtonView" android:id="@+id/keypad_num6"
              android:layout_column="3" android:text="6" android:layout_weight="0.32"/>
    </TableRow>
</TableLayout>